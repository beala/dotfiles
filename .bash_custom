#Set up the prompt
SC="\e[0;33m" #start color code. Change code to change the color of the PWD.
EC="\e[0m"  #end color code
GRN='\e[0;32m'
PS1="$SC[\w]$EC$GRN[\h]$EC\n\u\$ "

# Include .irm an "Improved rm" command.
if [ -f ~/.irm ]; then
  . ~/.irm
fi

# Send stdin to sprunge.us (pastebin service)
pastebin() { curl --silent -F 'sprunge=<-' http://sprunge.us; }

# Aliases
alias dir-size="du -hs"

export EDITOR=vim
